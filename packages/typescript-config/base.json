{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "incremental": false,
        "noImplicitAny": true,
        "module": "ESNext",
        "moduleDetection": "force",
        "moduleResolution": "Bundler",
        "target": "ESNext",
        "noUncheckedIndexedAccess": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "allowJs": true,
        "isolatedModules": true
    }
}